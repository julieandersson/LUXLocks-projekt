@model LUXLocks_projekt.Models.StylistModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Ta bort</h2>
<h4>Är du säker att du vill ta bort denna personal?</h4>
<p class="text-muted fst-italic">
    Stäm alltid av med ansvarig innan du tar bort en personal.
</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/@Model.ImageName" alt="Profilbild">
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Ta bort" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka till personal</a>
    </form>
</div>
