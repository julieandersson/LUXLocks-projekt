@model LUXLocks_projekt.Models.StylistModel

@{
    ViewData["Title"] = "Redigera personal";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Redigera personal</h2>
    <p class="text-muted text-center fst-italic">
        Stäm alltid av med ansvarig innan du gör några ändringar.
    </p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageName" /> <!-- Behåller den gamla bilden om ingen ny laddas upp -->

                    <!-- Namn -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Namn</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Biografi -->
                    <div class="mb-3">
                        <label asp-for="Bio" class="form-label">Biografi</label>
                        <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <!-- Nuvarande bild -->
                    <div class="mb-3 text-center">
                        <label class="form-label fw-bold">Nuvarande bild</label>
                        <div class="d-flex justify-content-center">
                            <img src="~/images/thumb_@Model.ImageName" alt="personalbild" class="img-fluid rounded shadow-sm" style="max-width: 200px;">
                        </div>
                    </div>

                    <!-- Ny bilduppladdning -->
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label">Ladda upp en ny bild</label>
                        <input type="file" asp-for="ImageFile" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100">Spara ändringar</button>
                </form>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="text-decoration-none">Tillbaka till personal</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}