@model LUXLocks_projekt.Models.AppointmentModel

@{
    ViewData["Title"] = "Ändra bokning";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Ändra bokning</h2>
    <p class="text-muted text-center fst-italic">
        Stäm alltid av med kunden först innan du gör några ändringar.
    </p>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="AppointmentDate" class="form-label">Datum:</label>
                        <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerName" class="form-label">Fullständigt namn:</label>
                        <input asp-for="CustomerName" class="form-control" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefonnummer:</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-postadress:</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StylistModelId" class="form-label">Välj utövare:</label>
                        <select asp-for="StylistModelId" class="form-select" asp-items="ViewBag.StylistModelId"></select>
                        <span asp-validation-for="StylistModelId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TreatmentModelId" class="form-label">Behandling:</label>
                        <select asp-for="TreatmentModelId" class="form-select" asp-items="ViewBag.TreatmentModelId"></select>
                        <span asp-validation-for="TreatmentModelId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HairLength" class="form-label">Hårlängd:</label>
                        <input asp-for="HairLength" class="form-control" />
                        <span asp-validation-for="HairLength" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HairType" class="form-label">Hårtyp:</label>
                        <input asp-for="HairType" class="form-control" />
                        <span asp-validation-for="HairType" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AdditionalInfo" class="form-label">Ytterligare information:</label>
                        <textarea asp-for="AdditionalInfo" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="SilentTreatment" />
                        <label class="form-check-label">
                            @Html.DisplayNameFor(model => model.SilentTreatment)
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100">Spara ändringar</button>
                </form>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="text-decoration-none">Tillbaka till bokningar</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}