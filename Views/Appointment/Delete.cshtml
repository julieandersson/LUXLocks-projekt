@model LUXLocks_projekt.Models.AppointmentModel

@{
    ViewData["Title"] = "Avboka";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body text-center">
            <h2 class="mb-3">Avboka</h2>
            <p class="text-muted">Är du säker på att du vill ta bort denna bokning?</p>
            <p class="text-danger fst-italic">
                Stäm alltid av med kunden först innan du avbokar.
            </p>

            <hr />

            <div class="text-start">
                <p><strong>Tid:</strong> @Html.DisplayFor(model => model.AppointmentDate)</p>
                <p><strong>Kund:</strong> @Html.DisplayFor(model => model.CustomerName)</p>
                <p><strong>Telefon:</strong> @Html.DisplayFor(model => model.PhoneNumber)</p>
                <p><strong>Email:</strong> @Html.DisplayFor(model => model.Email)</p>
                <p><strong>Frisör:</strong> @Html.DisplayFor(model => model.Stylist.Name)</p>
                <p><strong>Behandling:</strong> @Html.DisplayFor(model => model.Treatment.Name)</p>
                <p><strong>Hårlängd:</strong> @Html.DisplayFor(model => model.HairLength)</p>
                <p><strong>Hårtyp:</strong> @Html.DisplayFor(model => model.HairType)</p>
                <p><strong>Övrig info:</strong> @Html.DisplayFor(model => model.AdditionalInfo)</p>
                <p><strong>Silent Treatment:</strong> @(Model.SilentTreatment ? "Ja" : "Nej")</p>
            </div>

            <hr />

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100 mb-2">Avboka</button>
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Tillbaka till bokningar</a>
            </form>
        </div>
    </div>
</div>