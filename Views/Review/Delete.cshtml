@model LUXLocks_projekt.Models.ReviewModel

@{
    ViewData["Title"] = "Ta bort recension";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body text-center">
            <h2 class="mb-3">Ta bort recension</h2>
            <p class="text-muted">Är du säker på att du vill ta bort denna recension?</p>
            <p class="text-danger fst-italic">
                Stäm alltid av med kunden först innan du tar bort.
            </p>

            <hr />

            <div class="text-start">
                <p><strong>Behandling:</strong> @(Model.Treatment != null ? Model.Treatment.Name : "Ej vald")</p>
                <p><strong>Kund:</strong> @Html.DisplayFor(model => model.Name)</p>
                <p><strong>Betyg:</strong> 
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Model.Rating)
                        {
                            <i class="bi bi-star-fill text-warning"></i>
                        }
                        else
                        {
                            <i class="bi bi-star text-muted"></i>
                        }
                    }
                </p>
                <p><strong>Kommentar:</strong> @Html.DisplayFor(model => model.Comment)</p>
                <p><strong>Skapad:</strong> @Html.DisplayFor(model => model.CreatedAt)</p>
            </div>

            <hr />

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100 mb-2">Ta bort</button>
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Tillbaka till recensioner</a>
            </form>
        </div>
    </div>
</div>