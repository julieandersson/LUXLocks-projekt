@model LUXLocks_projekt.Models.TreatmentModel

@{
    ViewData["Title"] = "Ta bort behandling";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body text-center">
            <h2 class="mb-3">Ta bort behandling</h2>
            <p class="text-muted">Är du säker på att du vill ta bort denna behandling?</p>
            <p class="text-danger fst-italic">
                Stäm alltid av med ansvarig innan du tar bort en behandling.
            </p>

            <hr />

            <div class="text-start">
                <p><strong>Namn:</strong> @Html.DisplayFor(model => model.Name)</p>
                <p><strong>Beskrivning:</strong> @Html.DisplayFor(model => model.Description)</p>
                <p><strong>Pris:</strong> @Html.DisplayFor(model => model.Price) kr</p>
            </div>

            <hr />

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100 mb-2">Ta bort</button>
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Tillbaka till behandlingar</a>
            </form>
        </div>
    </div>
</div>